import Layout from "../layouts/Layout.astro";
---

<Layout title="Multipagina-1">
	<span class="font-myfont">Hola mundo</span>
	<div class="text-red-400 text-5xl">Clear</div>
	<div
		id="btn"
		class="bg-orange-500 inline-block p-3 rounded-lg cursor-pointer"
	>
		presioname
	</div>

	<div class="embla">
		<div class="embla__viewport">
			<div class="embla__container">
				<div class="embla__slide flex justify-between">
					<img src="/img/imagen-1.jfif" alt=""  class="max-w-96 h-full">
					<img src="/img/imagen-1.jfif" alt=""  class="max-w-96 h-full">
					<img src="/img/imagen-1.jfif" alt=""  class="max-w-96 h-full">
					<img src="/img/imagen-1.jfif" alt=""  class="max-w-96 h-full">
					<img src="/img/imagen-1.jfif" alt=""  class="max-w-96 h-full">
				</div>
				<div class="embla__slide ">
					<img src="/img/imagen-2.jfif" alt="" class="max-w-96 h-full m-auto">
				</div>
				<div class="embla__slide ">
					<img src="/img/imagen-3.jfif" alt="" class="max-w-96  h-full m-auto">
				</div>
			</div>
		</div>
		<button class="embla__prev">Prev</button>
		<button class="embla__next">Next</button>
	</div>
</Layout>

<style>
	.embla {
		overflow: hidden;
	}
	.embla__container {
		display: flex;
	}
	.embla__slide {
		flex: 0 0 100%;
		min-width: 0;
	}
</style>

<script>
	import JSConfetti from "js-confetti";
	import EmblaCarousel from "embla-carousel";

	const jsConfetti = new JSConfetti();

	// Grab wrapper nodes
	const rootNode = document.querySelector(".embla");
	const viewportNode = rootNode.querySelector(".embla__viewport");

	// Grab button nodes
	const prevButtonNode = rootNode.querySelector(".embla__prev");
	const nextButtonNode = rootNode.querySelector(".embla__next");

	const emblaNode = document.querySelector(".embla");
	const options = { loop: false };
	const embla = EmblaCarousel(viewportNode, options);
	// Add click listeners
	prevButtonNode.addEventListener("click", embla.scrollPrev, false);
	nextButtonNode.addEventListener("click", embla.scrollNext, false);

	const btn = document.getElementById("btn");

	btn.addEventListener("click", function (e) {
		const elemen = e.target;
		//elemen.classList.remove("bg-blue-200")
		//elemen.classList.add("bg-red-500")
		elemen.classList.replace("bg-blue-200", "bg-red-600");
		elemen.innerText = "Ouch";

		const myDiv = document.createElement("div");
		myDiv.innerText = "Esto es un div creado por js";
		myDiv.classList.add(
			"bg-green-500",
			"p-1",
			"text-white",
			"font-semibold",
			"w-auto",
			"my-2",
			"cursor-pointer",
		);

		myDiv.addEventListener("click", function (e) {
			e.target.remove();
		});

		document.body.appendChild(myDiv);

