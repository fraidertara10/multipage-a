---
import Layout from "../layouts/Layout.astro";
---
 <Layout>
    <div class=" h-screen w-96 m-auto pt-20 ">
        <h1 class="text-3xl font-bold text-center mb-6">Contacto</h1>
        
        <form action="#" method="POST" class="bg-gradient-to-b from-blue-600 to-blue-300 shadow-md rounded-lg p-8">
            <div class="mb-4">
                <label for="name" class="block text-gray-700">Nombre</label>
                <input type="text" id="name" name="name" required class="mt-1 p-2 border border-gray-300 rounded w-full">
            </div>

            <div class="mb-4">
                <label for="email" class="block text-gray-700">Correo Electr√≥nico</label>
                <input type="email" id="email" name="email" required class="mt-1 p-2 border border-gray-300 rounded w-full">
            </div>

            <div class="mb-4">
                <label for="message" class="block text-gray-700">Mensaje</label>
                <textarea id="message" name="message" required class="mt-1 p-2 border border-gray-300 rounded w-full" rows="4"></textarea>
            </div>

            <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">
                Enviar
            </button>
        </form>
    </div>
 </Layout>